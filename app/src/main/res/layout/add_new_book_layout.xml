<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtTitle"
            android:hint="Title"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/buttontextblack"
            android:inputType="textMultiLine"
            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtAuthor"
            android:hint="Name"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/buttontextblack"
            android:inputType="textMultiLine"
            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtDescription"
            android:hint="Description"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/buttontextblack"
            android:inputType="textMultiLine"
            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtIsbn"
            android:hint="ISBN"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/buttontextblack"
            android:inputType="number"
            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPageCount"
            android:hint="Page Count"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/buttontextblack"
            android:inputType="number"
            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtDate"
            android:hint="Date"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/buttontextblack"
            android:inputType="date"
            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <info.hoang8f.widget.FButton
                android:id="@+id/btn_select"
                android:text="Select"
                android:textColor="@color/buttonColor"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <info.hoang8f.widget.FButton
                android:id="@+id/btn_upload"
                android:text="Upload"
                android:textColor="@color/buttonColor"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>